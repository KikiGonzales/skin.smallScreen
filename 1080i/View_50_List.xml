<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>

	<include name="View_50_List">
	
		<description>List View (id=50)</description>
        <control type="group">
            <visible>Control.IsVisible(50)</visible>
            <include>Animation.ViewChange</include>     
            <include>DefSideLabel</include> 
            <control type="scrollbar" id="60">
                <posx>-18</posx>
                <posy>210</posy>
                <height>690</height>
                <include>DefScrollBarMove</include>
                <animation effect="fade" start="100" end="25" time="400" condition="!Control.HasFocus(60)">Conditional</animation>
                <animation effect="fade" start="100" end="0" condition="[!IntegerGreaterThan(Container.NumPages,1) + !Control.HasFocus(60)] | ControlGroup(9000).HasFocus()">Conditional</animation>

            </control>      
            <control type="list" id="50">
                <posx>5</posx>
                <posy>210</posy>
                <width>972</width>
                <height>690</height>
                <onleft>60</onleft>
                <onright condition="Container.Content(songs) + !Window.IsVisible(MyMusicNav.xml)">Back</onright>
                <onright condition="![Container.Content(songs) + !Window.IsVisible(MyMusicNav.xml)]">9000</onright>
                <onup>50</onup>
                <ondown>50</ondown>
                <include>DefOnBack</include>
                <pagecontrol>60</pagecontrol>
                <viewtype label="535">list</viewtype>
                <scrolltime tween="quadratic">400</scrolltime>

                <itemlayout width="972" height="69">
                    <control type="group">
                        <control type="group">
                        
                            <visible>Container.Content(movies) | Container.Content(episodes) | Container.Content(songs) | Container.Content(seasons) | Container.Content(tvshows)</visible>
                            <control type="image">
                                <posx>8</posx>
                                <posy>9</posy>
                                <width>48</width>
                                <height>48</height>
                                <texture colordiffuse="PanelFG-NF">$INFO[ListItem.PercentPlayed,common/circle/,.png]</texture>
                                <visible>!ListItem.IsPlaying + !IntegerGreaterThan(ListItem.PercentPlayed,99) + IntegerGreaterThan(ListItem.PercentPlayed,1)</visible>
                            </control>
                            <control type="label">
                                <posx>32</posx>
                                <posy>9</posy>
                                <width>48</width>
                                <height>48</height>
                                <align>center</align>
                                <aligny>center</aligny>
                                <font>Font-Button</font>
                                <label>$VAR[WatchedLabel]</label>
                                <visible>ListItem.IsPlaying | IntegerGreaterThan(ListItem.PercentPlayed,99) | !IntegerGreaterThan(ListItem.PercentPlayed,1)</visible>
                            </control>
                            <control type="label">
                                <posx>64</posx>
                                <width>900</width>
                                <font>Font-Button</font>
                                <label>$VAR[VARLabel]</label>
                            </control>
                        </control>
                        <control type="label">
                            <posx>30</posx>
                            <width>900</width>
                            <font>Font-Button</font>
                            <label>$VAR[VARLabel]</label>
                            <visible>!Container.Content(movies) + !Container.Content(episodes) + !Container.Content(songs) + !Container.Content(seasons) + !Container.Content(tvshows)</visible>
                        </control>
                        <control type="label">
                            <posx>936</posx>
                            <width>900</width>
                            <font>Font-ListInfo-Small</font>
                            <align>right</align>
                            <label>$INFO[ListItem.Label2]</label>
                        </control>
                    </control>
    

                </itemlayout>

                <focusedlayout width="972" height="69">
                    <control type="group">
                        <control type="group">
                            <visible>Control.HasFocus(50)</visible>
                            <control type="image">
                                <height>69</height>
                                <width>969</width>
                                <texture border="12" flipx="false">common/border-inner-highlight.png</texture>
                                <animation condition="Container(50).OnNext" reversible="false" effect="slide" start="0,-33" end="0,0" time="300" tween="back" easing="out">Focus</animation>
                                <animation condition="Container(50).OnPrevious" reversible="false" effect="slide" start="0,33" end="0,0" time="300" tween="back" easing="out">Focus</animation>
                            </control>
                            <control type="group">
                                <visible>Container.Content(movies) | Container.Content(episodes) | Container.Content(songs) | Container.Content(seasons) | Container.Content(tvshows)</visible>
                                <control type="image">
                                    <posx>8</posx>
                                    <posy>9</posy>
                                    <width>48</width>
                                    <height>48</height>
                                    <texture colordiffuse="PanelFG">$INFO[ListItem.PercentPlayed,common/circle/,.png]</texture>
                                    <visible>!ListItem.IsPlaying + !IntegerGreaterThan(ListItem.PercentPlayed,99) + IntegerGreaterThan(ListItem.PercentPlayed,1)</visible>
                                </control>
                                <control type="label">
                                    <posx>32</posx>
                                    <posy>9</posy>
                                    <width>48</width>
                                    <height>48</height>
                                    <align>center</align>
                                    <aligny>center</aligny>
                                    <font>Font-Button</font>
                                    <label>$VAR[WatchedLabel]</label>
                                    <visible>ListItem.IsPlaying | IntegerGreaterThan(ListItem.PercentPlayed,99) | !IntegerGreaterThan(ListItem.PercentPlayed,1)</visible>
                                </control>
                                <control type="label">
                                    <posx>64</posx>
                                    <width>900</width>
                                    <font>Font-Button</font>
                                    <label>$VAR[VARLabel]</label>
                                    <textcolor>PanelFG</textcolor>
                                </control>
                            </control>
                            <control type="label">
                                <posx>30</posx>
                                <width>900</width>
                                <font>Font-Button</font>
                                <label>$VAR[VARLabel]</label>
                                <textcolor>PanelFG</textcolor>
                                <visible>![Container.Content(movies) | Container.Content(episodes) | Container.Content(songs) | Container.Content(seasons) | Container.Content(tvshows)]</visible>
                            </control>
                            <control type="label">
                                <posx>936</posx>
                                <width>900</width>
                                <font>Font-ListInfo-Small</font>
                                <align>right</align>
                                <label>$INFO[ListItem.Label2]</label>
                                <textcolor>PanelFG</textcolor>
                            </control>
                        </control>
                        <control type="group">
                            <visible>!Control.HasFocus(50)</visible>
                            <control type="group">
                                <visible>Container.Content(movies) | Container.Content(episodes) | Container.Content(songs) | Container.Content(seasons) | Container.Content(tvshows)</visible>
                                <control type="image">
                                    <posx>8</posx>
                                    <posy>9</posy>
                                    <width>48</width>
                                    <height>48</height>
                                    <texture colordiffuse="PanelFG-NF">$INFO[ListItem.PercentPlayed,common/circle/,.png]</texture>
                                    <visible>!ListItem.IsPlaying + !IntegerGreaterThan(ListItem.PercentPlayed,99) + IntegerGreaterThan(ListItem.PercentPlayed,1)</visible>
                                </control>
                                <control type="label">
                                    <posx>32</posx>
                                    <posy>9</posy>
                                    <width>48</width>
                                    <height>48</height>
                                    <align>center</align>
                                    <aligny>center</aligny>
                                    <font>Font-Button</font>
                                    <label>$VAR[WatchedLabel]</label>
                                    <visible>ListItem.IsPlaying | IntegerGreaterThan(ListItem.PercentPlayed,99) | !IntegerGreaterThan(ListItem.PercentPlayed,1)</visible>
                                </control>
                                <control type="label">
                                    <posx>64</posx>
                                    <width>900</width>
                                    <font>Font-Button</font>
                                    <label>$VAR[VARLabel]</label>
                                </control>
                            </control>
                            <control type="label">
                                <posx>30</posx>
                                <width>900</width>
                                <font>Font-Button</font>
                                <label>$VAR[VARLabel]</label>
                                <visible>![Container.Content(movies) | Container.Content(episodes) | Container.Content(songs) | Container.Content(seasons) | Container.Content(tvshows)]</visible>
                            </control>
                            <control type="label">
                                <posx>936</posx>
                                <width>900</width>
                                <font>Font-ListInfo-Small</font>
                                <align>right</align>
                                <label>$INFO[ListItem.Label2]</label>
                            </control>
                        </control>
                    </control>
                </focusedlayout>

            </control>
            <control type="group">
                <posx>990</posx>
                <posy>210</posy>
                <control type="image">
                    <width>444</width>
                    <height>690</height>
                    <texture colordiffuse="PosterBorder" border="5">common/border-inner.png</texture>
                </control>
            </control>
            <control type="group">
                <posx>990</posx>
                <posy>210</posy>
                <visible>[!substring(Container.FolderPath,plugin://,left) + !Container.Content(addons) + !Container.Content(episodes) + [Window.IsVisible(MyVideoNav.xml) | Window.IsVisible(MyVideoPlaylist.xml)] + ![[Skin.HasSetting(listview.tvinfo) + Container.Content(tvshows)] | [Skin.HasSetting(listview.info) + Container.Content(movies)]]] | stringcompare(ListItem.Label,..)</visible>
                <control type="image">
                    <posx>11</posx>
                    <posy>11</posy>
                    <width>422</width>
                    <height>607</height>
                    <fadetime>200</fadetime>
                    <texture background="true">$VAR[PosterImage]</texture>
                    <aspectratio aligny="top">scale</aspectratio>
                    <bordertexture border="1" colordiffuse="BorderColor">common/border.png</bordertexture>
                    <bordersize>1</bordersize>
                </control>
                <control type="label">
                    <posx>18</posx>
                    <posy>618</posy>
                    <height>68</height>
                    <width>408</width>
                    <align>center</align>
                    <font>Font-ListInfo-Small</font>
                    <label>$VAR[ExtraInfo]</label>
                </control>
            </control>
            
            <control type="group">
                <posx>990</posx>
                <posy>210</posy>
                <visible>[Container.Content(episodes) | [Skin.HasSetting(listview.tvinfo) + Container.Content(tvshows)] | [Skin.HasSetting(listview.info) + Container.Content(movies)]] + !stringcompare(ListItem.Label,..) + [Window.IsVisible(MyVideoNav.xml) | Window.IsVisible(MyVideoPlaylist.xml)] + !substring(Container.FolderPath,plugin://,left)</visible>
                <control type="image">
                    <posx>11</posx>
                    <posy>11</posy>
                    <width>422</width>
                    <height>237</height>
                    <texture background="true">$VAR[FanartImage]</texture>
                    <aspectratio aligny="top">scale</aspectratio>
                    <bordertexture border="1" colordiffuse="BorderColor">common/border.png</bordertexture>
                    <bordersize>1</bordersize>
                </control>
                <control type="label">
                    <posx>22</posx>
                    <posy>254</posy>
                    <height>68</height>
                    <width>400</width>
                    <textcolor>Selected</textcolor>
                    <align>left</align>
                    <font>Font-ListHeader</font>
                    <label>$INFO[ListItem.TvShowTitle]</label>
                    <visible>Container.Content(episodes)</visible>
                </control>
                <control type="label">
                    <posx>22</posx>
                    <posy>254</posy>
                    <height>68</height>
                    <width>400</width>
                    <textcolor>Selected</textcolor>
                    <align>left</align>
                    <font>Font-ListHeader</font>
                    <label>$INFO[ListItem.Label]</label>
                    <visible>!Container.Content(episodes)</visible>
                </control>
                <control type="textbox">
                    <posx>22</posx>
                    <posy>320</posy>
                    <height>304</height>
                    <width>400</width>
                    <textcolor>Selected</textcolor>
                    <align>justify</align>
                    <font>Font-ListInfo</font>
                    <label>$INFO[ListItem.Plot]</label>
                </control>
                <control type="label">
                    <posx>22</posx>
                    <posy>618</posy>
                    <height>68</height>
                    <width>400</width>
                    <textcolor>Selected</textcolor>
                    <align>center</align>
                    <font>Font-ListInfo-Small</font>
                    <label>$VAR[ExtraInfo]</label>
                </control>
            </control>
            <control type="group">
                <posx>990</posx>
                <posy>210</posy>
                <visible>!Window.IsVisible(MyVideoPlaylist.xml) + [!Window.IsVisible(MyVideoNav.xml) | [Window.IsVisible(MyVideoNav.xml) + [Container.Content(addons) | substring(Container.FolderPath,plugin://,left)] ]] + !stringcompare(ListItem.Label,..)</visible>
                <control type="image">
                    <posx>11</posx>
                    <posy>11</posy>
                    <width>422</width>
                    <height>422</height>
                    <fadetime>200</fadetime>
                    <texture background="true">$VAR[PosterImage]</texture>
                    <aspectratio aligny="top">scale</aspectratio>
                    <bordertexture border="1" colordiffuse="BorderColor">common/border.png</bordertexture>
                    <bordersize>1</bordersize>
                </control>

                <control type="label">
                    <posx>22</posx>
                    <posy>446</posy>
                    <height>68</height>
                    <width>400</width>
                    <textcolor>Selected</textcolor>
                    <align>left</align>
                    <font>Font-ListHeader</font>
                    <label>$VAR[VARLabel]</label>
                    <scroll>true</scroll>
                </control>
                <control type="textbox">
                    <posx>22</posx>
                    <posy>514</posy>
                    <height>160</height>
                    <width>400</width>
                    <textcolor>Selected</textcolor>
                    <align>justify</align>
                    <font>Font-ListInfo</font>
                    <label>$VAR[PlotBox]</label>
                </control>
            </control>
            
        </control>

	</include>

</includes>
