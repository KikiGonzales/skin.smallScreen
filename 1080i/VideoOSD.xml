<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="2901">
	<defaultcontrol always="false">14</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
    <zorder>5</zorder>
    
    <onunload>ClearProperty(fullscreeninfo,seekbar)</onunload>
    
	<controls>
	    <control type="group">
	        <visible>!Window.IsVisible(DialogPVRChannelsOSD.xml)</visible>
	        <animation type="WindowOpen">
	            <effect type="slide" start="0,64" end="0" time="200"/>
                <effect type="fade" start="0" end="100" delay="150" time="200"/>
            </animation>
            <animation type="Visible">
                <effect type="fade" start="0" end="100" time="200"/>
                <effect type="slide" start="0,64" end="0" time="200"/>
            </animation>
            <animation type="Hidden">
                <effect type="fade" end="0" start="100" time="200"/>
                <effect type="slide" end="0,64" start="0" time="200"/>
            </animation>
            <animation type="WindowClose">
                <effect type="fade" end="0" start="100" time="200"/>
                <effect type="slide" end="0,64" start="0" time="200"/>
            </animation>
            <control type="grouplist" id="100">
                <visible>Window.IsVisible(fullscreenvideo)</visible>
                <posx>32</posx>
                <posy>1024</posy>
                <height>48</height>
                <itemgap>3</itemgap>
                <orientation>horizontal</orientation>
                <align>left</align>
                <onleft>6</onleft>
                <onright>12</onright>
                <onup>-</onup>
                <ondown>-</ondown>

                <control type="button" id="1">
                    <description>Subs</description>
                    <width>230</width>
                    <height>48</height>
                    <label>287</label>
                    <align>right</align>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <focusedcolor>Highlight</focusedcolor>
                    <onclick condition="!VideoPlayer.Content(livetv)">ActivateWindow(SubtitleSearch)</onclick>
                    <onclick condition="VideoPlayer.Content(livetv)">Action(ShowSubtitles)</onclick>
                    <animation effect="fade" start="100" end="33" condition="!VideoPlayer.SubtitlesEnabled + VideoPlayer.Content(livetv)">Conditional</animation>
                    <include>DefOSDUpDown</include>
                </control>

                <control type="button" id="2">
                    <description>Audio Settings</description>
                    <width>230</width>
                    <height>48</height>
                    <label>292</label>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <focusedcolor>Highlight</focusedcolor>
                    <onclick>ActivateWindow(124)</onclick>
                    <include>DefOSDUpDown</include>
                </control>

                <control type="button" id="3">
                    <description>Video Settings</description>
                    <width>230</width>
                    <height>48</height>
                    <label>291</label>
                    <texturefocus>-</texturefocus>
                    <texturenofocus>-</texturenofocus>
                    <focusedcolor>Highlight</focusedcolor>
                    <onclick>ActivateWindow(123)</onclick>
                    <include>DefOSDUpDown</include>
                </control>
            </control>
    
            <control type="grouplist" id="101">
            
                <posy>1024</posy>
                <width>1920</width>
                <height>48</height>
                <itemgap>16</itemgap>
                <orientation>horizontal</orientation>
                <align>center</align>
                <onleft>3</onleft>
                <onright>4</onright>
                <ondown>-</ondown>

                <control type="button" id="12">
                    <description>Skip Back</description>
                    <width>48</width>
                    <height>48</height>
                    <label>210</label>
                    <font>-</font>
                    <include>DefOSDUpDown</include>
                    <texturefocus colordiffuse="Highlight" flipx="true">osd/next.png</texturefocus>
                    <texturenofocus colordiffuse="PanelFG" flipx="true">osd/next.png</texturenofocus>
                    <onclick>PlayerControl(Previous)</onclick>
                </control>

                <control type="button" id="13">
                    <description>Rewind</description>
                    <width>48</width>
                    <height>48</height>
                    <label>31036</label>
                    <font>-</font>
                    <include>DefOSDUpDown</include>
                    <texturefocus colordiffuse="Highlight" flipx="true">osd/ff.png</texturefocus>
                    <texturenofocus colordiffuse="PanelFG" flipx="true">osd/ff.png</texturenofocus>
                    <onclick>PlayerControl(Rewind)</onclick>
                </control>

                <control type="togglebutton" id="14">
                    <description>Play/Pause</description>
                    <width>48</width>
                    <height>48</height>
                    <label>31037</label>
                    <altlabel>208</altlabel>
                    <font>-</font>
                    <include>DefOSDUpDown</include>
                    <texturefocus colordiffuse="Highlight">osd/pause.png</texturefocus>
                    <texturenofocus colordiffuse="PanelFG">osd/pause.png</texturenofocus>
                    <usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
                    <alttexturefocus colordiffuse="Highlight">osd/play.png</alttexturefocus>
                    <alttexturenofocus colordiffuse="PanelFG">osd/play.png</alttexturenofocus>
                    <onclick>PlayerControl(Play)</onclick>
                </control>

                <control type="button" id="15">
                    <description>Stop</description>
                    <width>48</width>
                    <height>48</height>
                    <label>31038</label>
                    <font>-</font>
                    <include>DefOSDUpDown</include>
                    <texturefocus colordiffuse="Highlight">osd/stop.png</texturefocus>
                    <texturenofocus colordiffuse="PanelFG">osd/stop.png</texturenofocus>
                    <onclick>PlayerControl(Stop)</onclick>
                </control>

                <control type="button" id="16">
                    <description>Fast Forward</description>
                    <width>48</width>
                    <height>48</height>
                    <label>31039</label>
                    <font>-</font>
                    <include>DefOSDUpDown</include>
                    <texturefocus colordiffuse="Highlight">osd/ff.png</texturefocus>
                    <texturenofocus colordiffuse="PanelFG">osd/ff.png</texturenofocus>
                    <onclick>PlayerControl(Forward)</onclick>
                </control>

                <control type="button" id="17">
                    <description>Next</description>
                    <width>48</width>
                    <height>48</height>
                    <label>209</label>
                    <font>-</font>
                    <include>DefOSDUpDown</include>
                    <texturefocus colordiffuse="Highlight">osd/next.png</texturefocus>
                    <texturenofocus colordiffuse="PanelFG">osd/next.png</texturenofocus>
                    <onclick>PlayerControl(Next)</onclick>
                </control>
            
            </control>
            <control type="grouplist" id="102">
                <visible>Window.IsVisible(fullscreenvideo)</visible>
            
                <posx>728r</posx>
                <posy>1024</posy>
                <height>48</height>
                <width>696</width>
                <itemgap>3</itemgap>
                <orientation>horizontal</orientation>
                <align>right</align>
                <onleft>17</onleft>
                <onright>1</onright>
                <onup>-</onup>
                <ondown>-</ondown>

                <include condition="VideoPlayer.Content(LiveTV)">LiveTVOSDRight</include>
                <include condition="!VideoPlayer.Content(LiveTV)">VideoOSDRight</include>
            </control>
            
		</control>
	</controls>

</window>