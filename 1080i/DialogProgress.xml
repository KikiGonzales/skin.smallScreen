<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="101">
	<defaultcontrol always="true">10</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
	    <control type="image">
	        <include>Dimensions_Fullscreen</include>
	        <texture>common/white.png</texture>
	        <colordiffuse>PanelBG</colordiffuse>
	        <animation effect="fade" end="75" condition="true">Conditional</animation>
	        <include>Animation.FadeIn</include>
	    </control>
        <control type="group" description="Left Side Header">
            <control type="image">
                <posy>18</posy>
                <posx>-64</posx>
                <width>300</width>
                <height>164</height>	
                <texture align="left">home/half-tile.png</texture>
                <colordiffuse>TopBar</colordiffuse>
                <aspectratio>scale</aspectratio>
            </control>

            <control type="image">
                <posy>10</posy>
                <posx>30</posx>
                <width>128</width>
                <height>128</height>	
                <texture>buttons/sync.png</texture>
                <aspectratio align="center" aligny="center">keep</aspectratio>
                <colordiffuse>TopBarIcon</colordiffuse>
                <animation effect="rotate" start="0" end="-360" time="2500" condition="true" loop="true" center="auto">Conditional</animation>
            </control>
            
            <control type="button" id="10">
                <posx>0</posx>
                <posy>115</posy>
                <width>184</width>
                <aligny>top</aligny>
                <font>Font-Sublabel</font>
                <align>center</align>
                <textoffsetx>0</textoffsetx>
                <texturefocus>-</texturefocus>
                <textcolor>TopBarIcon</textcolor>
                <focusedcolor>TopBarIcon</focusedcolor>
            </control>
        </control>
        <control type="group">		
            <animation effect="slide" start="1920" end="0" delay="0" time="200">WindowOpen</animation>
            <animation effect="slide" start="1920" end="0" delay="0" time="200">Visible</animation>
            <control type="image">
                <posy>18</posy>
                <posx>198</posx>
                <width>254</width>
                <height>164</height>	
                <texture align="left">home/half-tile.png</texture>
                <colordiffuse>TopBar</colordiffuse>
                <aspectratio>scale</aspectratio>
            </control>
            
            <control type="image">
                <posy>18</posy>
                <posx>300</posx>
                <width>1800</width>
                <height>164</height>	
                <texture>common/white.png</texture>
                <colordiffuse>TopBar</colordiffuse>
                <aspectratio>scale</aspectratio>
            </control>	

            <control type="label" id="1">
                <posx>284</posx>
                <posy>18</posy>
                <width>700</width>
                <height>164</height>
                <font>Font-Sublabel</font>
                <align>left</align>
                <textcolor>TopBarIcon</textcolor>
            </control>
            
            <control type="progress">
				<description>Progressbar</description>
				<posx>230</posx>
				<posy>170</posy>
				<width>1670</width>
				<height>6</height>
				<info>System.Progressbar</info>
			</control>
				
            <control type="group">
                <posx>732r</posx>
                <animation effect="slide" end="0,20" condition="IsEmpty(Control.GetLabel(2))">Conditional</animation>
                <animation effect="slide" end="0,20" condition="IsEmpty(Control.GetLabel(3))">Conditional</animation>
                <animation effect="slide" end="0,20" condition="IsEmpty(Control.GetLabel(4))">Conditional</animation>
                <control type="label" id="2">
                    <width>700</width>
                    <posy>35</posy>
                    <font>Font-ListInfo</font>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textcolor>TopBarIcon</textcolor>
                </control>
                <control type="label" id="3">
                    <width>700</width>
                    <posy>75</posy>
                    <font>Font-ListInfo</font>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textcolor>TopBarIcon</textcolor>
                    <animation effect="slide" end="0,-40" condition="IsEmpty(Control.GetLabel(2))">Conditional</animation>
                </control>
                <control type="label" id="4">
                    <width>700</width>
                    <posy>115</posy>
                    <font>Font-ListInfo</font>
                    <align>left</align>
                    <aligny>top</aligny>
                    <textcolor>TopBarIcon</textcolor>
                    <animation effect="slide" end="0,-40" condition="IsEmpty(Control.GetLabel(2))">Conditional</animation>
                    <animation effect="slide" end="0,-40" condition="IsEmpty(Control.GetLabel(3))">Conditional</animation>
                </control>

            </control>

        </control>
	</controls>


</window>